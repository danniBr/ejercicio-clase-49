<p id="notice"><%= notice %></p>

<h2>Search</h2>
<form action="<%= posts_path %>" method="get">
  <input name="q"> 
</form>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%= render @posts %>
  </tbody>
</table>

<br>

<h1>New Post</h1>

<%= render 'form', post: @post %>

<script>
$("[name=q").keyup(function(){
  $.ajax({
    url: "<%= posts_path %>",
    type: 'GET',
    dataType: 'script',
    data: {q: $(this).val()}
  });
});
</script>

